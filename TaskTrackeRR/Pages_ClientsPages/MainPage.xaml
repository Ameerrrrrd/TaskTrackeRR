<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskTrackeRR.MainPage"
             BackgroundColor="{AppThemeBinding Light='White', Dark='Black'}">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="15">
                <HorizontalStackLayout>
                    <Label Text="To-Do List 📅"
                           FontSize="20"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"
                           FontAttributes="Bold" />
                    
                    <ImageButton Source="search.png" 
                                 Grid.Column="1" />

                    <Label Text="About/Help"
                           Margin="100,0,0,0"
                           FontAttributes="Bold" 
                           HorizontalOptions="End" 
                           FontSize="20"
                           TextColor="{AppThemeBinding Light='Black', Dark='White'}"
                           Grid.Column="2" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="OnAboutTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <BoxView BackgroundColor="{AppThemeBinding Light='Black', Dark='White'}"
                         HeightRequest="1"
                         Margin="0,-25,0,0" />

                <Frame CornerRadius="12" 
                       Padding="10" 
                       Margin="0" 
                       BackgroundColor="{AppThemeBinding Light='#e0e0e0', Dark='#2c2c2c'}">
                    <VerticalStackLayout>
                        <Label x:Name="SupText" Text="👤 Sup," FontSize="20" />
                        <Label x:Name="DeadlineText"  Text="🕒 Hottest deadline:" FontSize="18" />
                    </VerticalStackLayout>
                </Frame>

                <CollectionView ItemsSource="{Binding Tasks}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                
                                <SwipeView.RightItems >
                                    <SwipeItems>
                                        <SwipeItemView x:Name="DeleteSwipe"
                                                       HeightRequest="50"
                                                       BackgroundColor="Transparent"
                                                       Padding="0"
                                                       Invoked="OnDeleteSwipeItemInvoked">

                                            <Frame CornerRadius="7"
                                                   HeightRequest="80"
                                                   WidthRequest="90"
                                                   Margin="0,3,0,3">

                                                <Image Source="trashcan.png"
                                                       WidthRequest="35"
                                                       HeightRequest="35"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>

                                                <Frame.BackgroundColor>
                                                    <AppThemeBinding Light="Red" Dark="#ad1313"/>
                                                </Frame.BackgroundColor>

                                            </Frame>

                                        </SwipeItemView>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                
                                <Frame Padding="15"
                                   Margin="5"
                                   CornerRadius="12"
                                   BackgroundColor="{AppThemeBinding Light='#e0e0e0', Dark='#2c2c2c'}">
                                <StackLayout>
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           TextColor="{AppThemeBinding Light='Black', Dark='White'}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnTaskTapped" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light='#888888', Dark='#aaaaaa'}"
                                           LineBreakMode="TailTruncation">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnTaskTapped" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    
                                </StackLayout>
                            </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom input bar -->
        <Grid Grid.Row="1"
              Padding="10"
              ColumnDefinitions="*,Auto"
              ColumnSpacing="15"
              BackgroundColor="{AppThemeBinding Light='White', Dark='Black'}">

            <Entry x:Name="NewTaskEntry"
                   Placeholder="Enter new task"
                   Grid.Column="0"
                   HorizontalOptions="FillAndExpand"
                   BackgroundColor="{AppThemeBinding Light='#f0f0f0', Dark='#1e1e1e'}"
                   TextColor="{AppThemeBinding Light='Black', Dark='White'}"
                   PlaceholderColor="Gray" />

            <Button Text="Add Task"
                    Grid.Column="1"
                    Clicked="OnAddTaskClicked"
                    BackgroundColor="{AppThemeBinding Light='#007AFF', Dark='#0A84FF'}"
                    TextColor="White"
                    Padding="20,10" />
        </Grid>
    </Grid>
</ContentPage>
