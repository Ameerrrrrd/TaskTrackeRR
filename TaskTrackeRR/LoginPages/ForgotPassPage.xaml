<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskTrackeRR.ForgotPassPage"
             Shell.NavBarIsVisible="False"  
             Title="ForgotPassPage">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Введите Email" FontSize="Medium"/>
        <Entry x:Name="emailEntry" Placeholder="example@domain.com" Keyboard="Email"/>
        <Button Text="Отправить новый пароль" Clicked="OnSubmitClicked"/>
    </VerticalStackLayout>
</ContentPage>